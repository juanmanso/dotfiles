# This is Git's per-user configuration file.
[user]
  name = Juan Manso
  email = juanmanso@gmail.com
  signingkey = B050AB12F5C652B13D661C3B8941A280AFBAB8A2

[gpg]
  program = gpg

[commit]
  gpgsign = true

[alias]
  ft = fetch
  ftp = fetch -p
  st = status
  ci = commit
  cim = commit -m
  ciam = commit -a -m
  cp = cherry-pick
  rb = rebase
  rbi = rebase -i
  rbm = rebase -i origin/master
  rbd = rebase -i origin/develop
  rbs = rebase -i origin/staging
  unstage = reset HEAD
  uncommit = reset --soft HEAD^
  br = branch -v
  bra = branch -a
  co = checkout
  cob = checkout -B
  df = diff
  l = log --decorate --graph --oneline
  lg = log --stat --decorate --graph --oneline
  up = pull --rebase origin master
  dc = diff --cached
  ph = push -u origin HEAD
  phf = push -u origin HEAD -f
  cleanup = "!git branch --merged | grep  -v '\\*\\|master\\|develop\\|main\\|dev' | xargs -n 1 git branch -d"
  fix-reference = git gc --prune=now

[color]
  ui = auto

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold

[color "status"]
  added = yellow
  changed = green
  untracked = cyan

[core]
  editor = vim

[pull]
  ff = only
[diff]
  tool = vimdiff
